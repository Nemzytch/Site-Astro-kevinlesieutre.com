---
interface Props {
    title: string;
    date: string;
    slug: string;
    featuredImage: string;
}

const { title, date, slug, featuredImage } = Astro.props;
---

<a href={`/blog/${slug}`} class="block w-64">
    <div class="group flex-col justify-start items-start gap-6 flex">
        <div class="w-full h-48 relative">
            <img 
                class="rounded-xl group-hover:opacity-50 transition-all duration-700 ease-in-out absolute inset-0 w-full h-full object-cover" 
                src={featuredImage} 
                alt={title}
            />
        </div>
        <div class="flex-col justify-start items-start gap-3 flex">
            <h4 
                class="text-gray-900 text-lg font-normal leading-7 line-clamp-2 group-hover:text-indigo-600 transition-all duration-700 ease-in-out"
                set:html={title}
            />
            <div class="justify-start items-center gap-2.5 inline-flex">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <path d="M12 8.99998V13L15 16M3 5.12132L5.10714 3M20.998 5.12657L18.8909 3.00525M20 13C20 17.4183 16.4183 21 12 21C7.58172 21 4 17.4183 4 13C4 8.5817 7.58172 4.99998 12 4.99998C16.4183 4.99998 20 8.5817 20 13Z" stroke="#111827" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span class="text-gray-600 text-sm font-normal leading-snug">{date}</span>
            </div>
        </div>
    </div>
</a>
