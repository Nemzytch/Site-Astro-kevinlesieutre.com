---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Description par d√©faut du site" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/images/KL.png" />
		<link href="https://fonts.googleapis.com/css2?family=Sansita+One&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<link href="https://cdn.jsdelivr.net/npm/pagedone@1.2.2/src/css/pagedone.css" rel="stylesheet"/>
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<slot />
		<Footer />
		<script src="https://cdn.jsdelivr.net/npm/pagedone@1.2.2/src/js/pagedone.js"></script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
